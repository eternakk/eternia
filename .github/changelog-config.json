{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["documentation"]
    },
    {
      "title": "## ⚙️ CI/CD",
      "labels": ["ci", "cd", "ci/cd"]
    },
    {
      "title": "## 🔧 Maintenance",
      "labels": ["chore", "maintenance"]
    },
    {
      "title": "## 🔒 Security",
      "labels": ["security"]
    },
    {
      "title": "## 🚧 Breaking Changes",
      "labels": ["breaking"]
    }
  ],
  "ignore_labels": [
    "ignore",
    "skip-changelog"
  ],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "${{CHANGELOG}}\n\n## 📦 Other Changes\n\n${{UNCATEGORIZED}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "No changes in this release",
  "label_extractor": [
    {
      "pattern": "(.) (.+)",
      "target": "$1",
      "flags": "gu"
    }
  ],
  "transformers": [
    {
      "pattern": "[Bb]ump (.*) from (.*) to (.*)",
      "target": "Bump $1 from $2 to $3"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": [
    "Owner/main"
  ],
  "tag_resolver": {
    "method": "semver",
    "filter": {
      "pattern": "v(.+)",
      "flags": "gu"
    }
  },
  "base_branches": [
    "main"
  ]
}